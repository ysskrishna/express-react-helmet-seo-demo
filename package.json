{
  "name": "express-react-helmet-backend",
  "version": "1.0.0",
  "description": "",
  "main": "server/index.ts",
  "type": "module",
  "scripts": {
    "backend:build": "tsc",
    "backend:start": "cross-env NODE_ENV=production node dist/index.js",
    "backend:dev": "tsx watch server/index.ts",
    "install-all": "npm install && cd client && npm install",
    "dev": "concurrently \"npm run backend:dev\" \"cd client && npm run dev\"",
    "backend:clean": "rimraf ./dist",
    "client:clean": "cd client && rimraf dist",
    "client:build": "cd client && npm run build",
    "clean": "npm run backend:clean && npm run client:clean",
    "build": "npm run clean && npm run backend:build && npm run client:build",
    "start": "npm run build && npm run backend:start"
  },
  "author": "ysskrishna",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "lowdb": "^7.0.1",
    "tsx": "^4.19.3"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/lowdb": "^1.0.15",
    "@types/node": "^22.13.10",
    "concurrently": "^9.1.2",
    "nodemon": "^3.1.9",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.2"
  }
}
